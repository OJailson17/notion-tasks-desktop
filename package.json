{
	"name": "notion-tasks-desktop",
	"version": "1.0.1",
	"main": "src/electron/main.js",
	"license": "MIT",
	"type": "module",
	"author": "Jailson de Oliveira",
	"description": "Application to track all the tasks saved on Notion",
	"scripts": {
		"dev": "electron .",
		"build": "electron-builder",
		"bundle": "esbuild ./src/electron/*.js --bundle --outdir=./dist --platform=node"
	},
	"devDependencies": {
		"babel-loader": "^9.1.3",
		"electron": "^28.1.3",
		"electron-builder": "^24.9.1",
		"esbuild": "^0.19.11"
	},
	"build": {
		"appId": "com.jailson.tasks",
		"productName": "Notion Tasks",
		"asar": true,
		"target": "nsis",
		"directories": {
			"output": "build"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"win": {
			"icon": "/assets/icon-l.png"
		},
		"extraResources": [
			"./assets/**"
		]
	}
}
