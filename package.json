{
	"name": "notion-tasks-desktop",
	"version": "1.0.6",
	"main": "src/electron/main.js",
	"license": "MIT",
	"author": "Jailson de Oliveira",
	"description": "Application to track all the tasks saved on Notion",
	"scripts": {
		"dev": "electron .",
		"build": "electron-builder"
	},
	"devDependencies": {
		"babel-loader": "^9.1.3",
		"electron": "^28.1.3",
		"electron-builder": "^24.9.1",
		"esbuild": "^0.19.11"
	},
	"build": {
		"appId": "com.jailson.tasks",
		"productName": "NotionTasks",
		"asar": true,
		"asarUnpack": [
			"notes.md",
			"data.js",
			".env"
		],
		"target": "nsis",
		"directories": {
			"output": "build"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"win": {
			"icon": "/assets/icon-l.png"
		},
		"extraResources": [
			"./assets/**"
		]
	},
	"dependencies": {
		"dotenv": "^16.4.1"
	}
}
